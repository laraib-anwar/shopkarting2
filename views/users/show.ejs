<% include ../partials/header %>
<div class = "container">
    <div class = "row">
        <div class = "col-md-3">
            <div class = "list-group">
                <li class = "list-group-item active">Information about the Uploader</li>

            </div>
        </div>
<div class = "row">
<div class = "col-mid-9">

    <div class = "thumbnail">
        <h1 class = "profile"><%= user.firstName + " " + user.lastName %></h1>
<img class = "img-responsive" src = "<%= user.avatar %>" alt = "user profile image">
    <div class = "profile"><a href = "<%= user.email %>">mailto:<h3><%= user.email %></h3></a></div>


</div>
<div class = "col- mid-3">
    <h3 class = "profile"> <%= user.username %>'s carts:</h3>
    <ul class = "profile">
        <% carts.forEach(function(cart){%>
        <li class = "profile"><a href = "/carts/<%= cart.id %>"><h3><%= cart.name %></h3></a></li>
        <% }); %>

</ul>
</div></div>
<% include ../partials/footer %>