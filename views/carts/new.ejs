<% include ../partials/header %>
<body class = "new-cart">
<div class = "container">
    <div class = "row">
        <header class = "jumbotron">
        <h1 style = "text-align: center">Create a new Cart</h1>
        <div style = "width:30%; margin: 25px auto;">



            <form action = "/carts" method ="POST" enctype = "multipart/form-data">
                <div class = "form-group">
                    <input class = "form-control" type = "text" name = "cart[name]" placeholder = "name of the product">
                </div>
                <div class = "form-group">
                    <label for = "image">Image</label>
                    <button class = "btn  btn-primary"><input type = "file" name = "image" accept = "image/*" required></button>
                </div>



                <div class = "form-group">
                    <input class ="form-control" type = "text" name = "cart[description]" placeholder = "product details">
                </div>


                <div class = "form-group">
                    <input class ="form-control" type = "text" name = "cart[price]" placeholder = "Price of the product">
                </div>



                <div class = "form-group">
                    <button class = "btn  btn-primary"> Submit! </button>
                </div>
            </form>
            <a href = "/carts" style="color:blue">Go Back</a>
            <p>Trademark copyright. All rights reserved</p>
        </div>
    </div>
</div>
    </header>
</body>

