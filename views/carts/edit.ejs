<% include ../partials/header %>

<body class = "edit-cart">
<div class = "container">
    <div class = "row">
        <header class = "jumbotron">
        <h1 style = "text-align: center">Edit <%= cart.name %></h1>
        <div style = "width:30%; margin: 25px auto;">



            <form action = "/carts/<%= cart._id %>/?_method=PUT" method = "POST" enctype = "multipart/form-data">
                <div class = "form-group">
                    <input class = "form-control" type = "text" name = "cart[name]" value= "<%= cart.name %>">
                </div>




                <div class = "form-group">
                    <input class ="form-control" type = "text" name = "cart[description]" value = "<%= cart.description %>">
                </div>
                <div class = "form-group">
                    <input class ="form-control" type = "text" name = "cart[price]" value = "<%= cart.price %>">
                </div>

                <div class = "form-group">
                    <button class = "btn btn-lg btn-primary"> Submit! </button>
                </div>
            </form>
            <a href = "/carts" style="color:blue">Go Back</a>
            <p>Trademark copyright. All rights reserved</p>
        </div>
    </div>
</div>
    </header>
    </body>

