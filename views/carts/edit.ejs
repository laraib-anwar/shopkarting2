<% include ../partials/header %>

<style>
        .jumbotron {
            color: black;
            background-color: #fff;
            
        }


         hr {
    border: 0;
    height: 1px;
    background-image: linear-gradient(to right, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.75), rgba(0, 0, 0, 0));

}

